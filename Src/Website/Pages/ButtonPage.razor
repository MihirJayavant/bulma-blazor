<!--Loading Buttons-->
<Content>
    Loading <br>
    <p>
    You can very easily turn a button into its loading version by appending 
    the is-loading modifier. You don't even need to remove the inner text, 
    which allows the button to maintain its original size between its default 
    and loading states.
    </p>
</Content>
<Snippet>
    <Output>
        <div class="buttons">
            <Button class="" IsLoading=@true>Loading</Button>
            <Button class="is-primary" IsLoading=@true>Loading</Button>
            <Button class="is-link" IsLoading=@true>Loading</Button>
            <Button class="is-info" IsLoading=@true>Loading</Button>
            <Button class="is-success" IsLoading=@true>Loading</Button>
            <Button class="is-danger" IsLoading=@true>Loading</Button>
        </div>
    </Output>
    <Code>
@("<div class=\"buttons\">")
    @("<Button IsLoading=@variable>Loading</Button>")
    @("<Button class=\"is-primary \" IsLoading=@variable>Loading</Button>")
    @("<Button class=\"is-link \" IsLoading=@variable>Loading</Button>")
    @("<Button class=\"is-info \" IsLoading=@variable>Loading</Button>")
    @("<Button class=\"is-success \" IsLoading=@variable>Loading</Button>")
    @("<Button class=\"is-danger \" IsLoading=@variable>Loading</Button>")
@("</div>") 
    </Code>

</Snippet>


